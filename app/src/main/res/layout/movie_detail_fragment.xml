<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.example.movieapp.model.Movie" />
    </data>

    <RelativeLayout
        android:id="@+id/movie_detail_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.search.MovieDetailFragment">

        <ImageView
            android:id="@+id/movie_detail_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="176dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="163dp"
            android:src="@{`http://image.tmdb.org/t/p/w400` + movie.posterImage}"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/movie_detail_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_detail_image_view"
            android:layout_alignParentStart="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="76dp"
            android:text="@{movie.title}"
            android:textSize="30sp"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/movie_detail_movie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_detail_movie_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="107dp"
            android:text="@{movie.plot}"
            android:textSize="30sp"
            tools:text="Description" />

    </RelativeLayout>
</layout>